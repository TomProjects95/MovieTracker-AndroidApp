<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:elevation="10dp"
    card_view:cardCornerRadius="@dimen/card_movie_radius">
    <RelativeLayout
        android:id="@+id/user_movieCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/user_movieCardPoster"
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/movieCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/movieCardPoster"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/user_movieCardGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieCardReleaseDate"
            android:layout_toEndOf="@id/movieCardPoster"
            android:padding="10dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/user_movieCardReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieCardTitle"
            android:layout_toEndOf="@id/movieCardPoster"
            android:padding="10dp"
            android:textSize="12sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
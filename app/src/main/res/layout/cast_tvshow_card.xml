<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:elevation="10dp"
    card_view:cardCornerRadius="@dimen/card_movie_radius"
    style="@style/DarkCard">
        <RelativeLayout
            android:id="@+id/tvshowCastCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/tvshowCastCardImage"
                android:layout_width="@dimen/movie_poster_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/tvshowCastCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvshowCastCardImage"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvshowCastCardCharacter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvshowCastCardName"
                android:layout_toEndOf="@id/tvshowCastCardImage"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/tvshowCastCardGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvshowCastCardCharacter"
                android:layout_toEndOf="@id/tvshowCastCardImage"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trendingtvlayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:layout_margin="0dp">

    <ImageView
        android:id="@+id/trendingtvimg"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_margin="0dp" />

    <RatingBar
        android:id="@+id/trendingtvshowrating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0.3dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:stepSize="0.01"
        android:progressTint="@android:color/holo_orange_dark"
        android:progressBackgroundTint="@android:color/holo_orange_dark"
        android:secondaryProgressTint="@android:color/holo_orange_dark"/>

</RelativeLayout>
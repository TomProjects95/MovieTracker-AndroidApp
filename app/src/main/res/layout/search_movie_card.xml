<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    style="@style/DarkCard">
        <RelativeLayout
            android:id="@+id/movieCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">
            <ImageView
                android:id="@+id/movieCardPoster"
                android:layout_width="@dimen/movie_poster_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/movieCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/movieCardPoster"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/movieCardGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieCardReleaseDate"
                android:layout_toEndOf="@id/movieCardPoster"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/movieCardReleaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieCardTitle"
                android:layout_toEndOf="@id/movieCardPoster"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />
</android.support.v7.widget.CardView>